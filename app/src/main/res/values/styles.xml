<resources>

    <style name="Red" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="rPrimary">#db4437</item>
        <item name="rPrimaryDark">#b93221</item>
        <item name="rBackground">#fafafa</item>
        <item name="rAccentPrimary">#0096b6</item>
        <item name="rAccentSecondary">#fcc75a</item>
        <item name="rAccentSecondaryAlpha">#99fcc75a</item>
        <item name="rForegroundDark">#222222</item>
        <item name="rForeground">#555555</item>
        <item name="rForegroundLight">#6b6b6b</item>
        <item name="rForegroundGrayedOut">#b5b5b5</item>
        <item name="rForegroundInverted">#fafafa</item>
        <item name="rForegroundInvertedGrayedOut">#e1e1e1</item>
        <item name="rColorEdgeEffect">#dddddd</item>
        <item name="rColorEdgeEffectAlpha">#99dddddd</item>
        <item name="rColorEdgeEffectInverted">#fafafa</item>
        <item name="search_text_background">@drawable/search_text_background_red</item>
        <item name="seekbar_background">@drawable/seekbar_background_red</item>
        <item name="seekbar_foreground">@drawable/seekbar_foreground_red</item>
        <item name="seekbar_thumb">@drawable/seekbar_thumb_red</item>
        <item name="tap_button">@drawable/tap_button_red</item>
        <item name="seekbar_progress">@drawable/seekbar_progress_red</item>
    </style>

    <style name="Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="rPrimary">#5181b8</item>
        <item name="rPrimaryDark">#3b5f87</item>
        <item name="rBackground">#fafafa</item>
        <item name="rAccentPrimary">#4873a4</item>
        <item name="rAccentSecondary">#5181b8</item>
        <item name="rAccentSecondaryAlpha">#993b5f87</item>
        <item name="rForegroundDark">#222222</item>
        <item name="rForeground">#555555</item>
        <item name="rForegroundLight">#6b6b6b</item>
        <item name="rForegroundGrayedOut">#b5b5b5</item>
        <item name="rForegroundInverted">#fafafa</item>
        <item name="rForegroundInvertedGrayedOut">#e1e1e1</item>
        <item name="rColorEdgeEffect">#dddddd</item>
        <item name="rColorEdgeEffectAlpha">#99dddddd</item>
        <item name="rColorEdgeEffectInverted">#fafafa</item>
        <item name="search_text_background">@drawable/search_text_background_blue</item>
        <item name="seekbar_background">@drawable/seekbar_background_blue</item>
        <item name="seekbar_foreground">@drawable/seekbar_foreground_blue</item>
        <item name="seekbar_thumb">@drawable/seekbar_thumb_blue</item>
        <item name="tap_button">@drawable/tap_button_blue</item>
        <item name="seekbar_progress">@drawable/seekbar_progress_blue</item>
    </style>

    <style name="Red.AppTheme">
        <item name="colorPrimary">?rPrimary</item>
        <item name="colorPrimaryDark">?rPrimaryDark</item>
        <item name="colorAccent">?rAccentPrimary</item>
    </style>

    <style name="Blue.AppTheme">
        <item name="colorPrimary">?rPrimary</item>
        <item name="colorPrimaryDark">?rPrimaryDark</item>
        <item name="colorAccent">?rAccentPrimary</item>
    </style>

    <style name="AppToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?rPrimary</item>
        <item name="colorPrimaryDark">?rPrimaryDark</item>
        <item name="colorAccent">?rAccentPrimary</item>
        <item name="colorControlNormal">?rForegroundInverted</item>
        <item name="titleTextColor">?rForegroundInverted</item>
        <item name="background">?rPrimary</item>
    </style>

    <style name="BPMLabelTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SongNameTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="SongDescriptionTextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="buttonBackgroundBorderless">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="buttonBackground">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
