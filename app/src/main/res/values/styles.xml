<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomizedActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/primary</item>
        <item name="background">@color/primary</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/CustomizedActionBar</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accentPrimary</item>
        <item name="colorControlNormal">@color/foregroundInverted</item>
        <item name="android:textColorSecondary">@color/foregroundInverted</item>
    </style>

    <style name="floating_action_button">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="NotificationText" parent="@android:style/TextAppearance.StatusBar.EventContent"/>

    <style name="NotificationTitle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title"/>

    <style name="BPMLabelTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SongNameTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="SongDescriptionTextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
